<indexer xmlns:b="at.ac.ait">
  <recordFilter>
    <includes>
      <include recordType="b:Book" vtags="last"/>
    </includes>
  </recordFilter>

  <fields>
    <field name="title" value="b:title"/>
    <field name="author" value="b:author"/>
    <field name="genre" value="b:genre"/>
    <field name="price" value="b:price"/>
    <field name="publish_date" value="b:publish_date"/>
    <field name="description" value="b:description"/>
  </fields>

</indexer>
